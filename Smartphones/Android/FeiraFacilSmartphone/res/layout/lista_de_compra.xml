<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:background="@drawable/tag_listas_telaminhaslistas" >

    <TextView
        android:id="@+id/quantidadeItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="20dp"
        android:text="130 Items"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/nomeDaLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/quantidadeItems"
        android:layout_alignBottom="@+id/quantidadeItems"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:text="Lista Mensal"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
