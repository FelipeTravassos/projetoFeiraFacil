<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:background="@drawable/tag_produtosemdivisoria" >

    <TextView
        android:id="@+id/nomeProdPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgProdPromo"
        android:layout_alignTop="@+id/imgProdPromo"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/precoProdPromo"
        android:layout_toRightOf="@+id/imgProdPromo"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!-- <TextView
        android:id="@+id/descProdPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgProdPromo"
        android:layout_alignRight="@+id/precoProdPromo"
        android:layout_below="@+id/imgProdPromo"
        android:text="Descrição Produto"
        android:textAppearance="?android:attr/textAppearanceSmall" />
 -->
    <ImageView
        android:id="@+id/imgProdPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/precoProdPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nomeProdPromo"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/nomeProdPromo"
        android:layout_marginRight="20dp"
        android:text="R$ 200,00"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
